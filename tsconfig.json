{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@api7-dashboard/boilerplate": ["./packages/boilerplate/src/index.tsx"],
      "@api7-dashboard/ui": ["packages/ui/src/index.tsx"],
      "@api7-dashboard/plugin": ["packages/plugin/src/index.tsx"]
    }
  },
  "include": ["**/src", ".eslintrc.js", "scripts"]
}
